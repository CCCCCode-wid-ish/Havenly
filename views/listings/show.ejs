<% layout('/layouts/boilerplate') %>

<div class="row mt-4">
  <div class="col-8 offset-2 mt-4">

    <h3><%= listing.title %></h3>

    <div class="card col-6 offset-3 show-card listing-card">
      <img 
        src="<%= listing.image.url %>" 
        alt="listing_image" 
        class="card-img-top show-img"
      >

      <div class="card-body">
        <h5 class="card-title">
            

        <p class="card-text">
          <%= listing.description %>
        </p>

        <p class="card-text">
          <% if (listing.owner) { %>
  <p><strong>Posted by:</strong> @<%= listing.owner.username %></p>
<% } %>

       <p class="card-text"> <strong>Location:</strong></p>   
          <p class="card-text"><p> <%= listing.location %>, </p></p>
          <p class="card-text"><%= listing.country %></p> 
        </p>

          <p class="card-text">
        &#8377; <%= listing.price.toLocaleString('en-IN') %>
        </p>
      </div>
    </div>

    <br>

    <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">
      Edit this listing
    </a>

    <form 
      method="POST" 
      action="/listings/<%= listing._id %>?_method=DELETE" 
      class="d-inline"
    >
      <button class="btn btn-danger">
        Delete this listing
      </button>
    </form>



  </div>
  <div class = "col-8 offset-2 mt-4">


    <h4>Leave a Review</h4>



    <form action ="/listings/<%= listing._id %>/reviews" method="POST" novalidate class = "needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" min = "1" max = "5" id ="rating" name = "review[rating]"
        class = "form-range"
       value="1" >
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea name="review[comment]"
         id="comment" 
         cols = "30"
          rows="10"
        class="form-control"
        required></textarea>
        <div class="invalid-feedback">Please submit some comments for review</div>
      </div>
    <button type="submit" class="btn btn-outline-dark">Submit</button>

    </form>

    <!--Rendering the reviews-->
    <p>All Reviews</p>
    <div class="row col-6">
  

<hr />
<h4>All Reviews</h4>
<div class="row row-cols-lg-2 row-cols-md-2 row-cols-sm-1">
  <% for(let review of listing.reviews) { %>
    <div class="col">
      <div class="card review-card mb-3">
        <div class="card-body">
          <h5 class="card-title">          
          @<%= review.author ? review.author.username : "Anonymous" %>  <!-- âœ… replace Jane Doe with this -->
        </h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %> Stars</p>
        
        <form 
  method="POST" 
  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" 
  class="mb-3"
>

<button class="btn btn-sm btn-dark">Delete</button>
        </form>
        </div>
      </div>
    </div>
  <% } %>
</div>
</div>
